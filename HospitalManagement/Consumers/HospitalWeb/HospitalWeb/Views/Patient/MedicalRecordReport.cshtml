@model MedicalRecordViewModel;


<div class="row">
    <form asp-action="Update" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Patient.Id" />
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Patient.Name"></label>
                <input type="text" asp-for="Patient.Name" class="form-control" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="Patient.CellPhoneNumber"></label>
                <input type="text" asp-for="Patient.CellPhoneNumber" class="form-control" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="3" class="form-control" readonly></textarea>
            </div>
        </div>
    </form>
</div>