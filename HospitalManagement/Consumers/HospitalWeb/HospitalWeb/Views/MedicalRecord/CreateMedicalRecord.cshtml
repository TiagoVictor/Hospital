@model MedicalRecordViewModel;
@{
}

<h1>Cadastrar Ficha</h1>

<div class="row">
    <form asp-action="Post" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Patient" class="form-label"></label>
                    <select asp-for="Patient.Id" class="form-control">
                        <option value="">Selecione</option>
                        @foreach (var item in Model.Patients)
                        {
                            <option value="@item.Id">@item.Name @item.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="Patient" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-1">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</div>
