@model MedicalRecordViewModel;
@{
    var doctorName = Model.Doctor.Name + Model.Doctor.LastName;
    var patientName = Model.Patient.Name + Model.Patient.LastName;
}

<h1>Atualizar Ficha</h1>

<div class="row">
    <form asp-action="Update" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Patient.Id" />
        <div class="row">
            <div class="col-md-6">
                <label>Nome do Paciente</label>
                <input type="text" value="@patientName" class="form-control" readonly/>
            </div>
            <div class="col-md-6">
                <label asp-for="Patient.CellPhoneNumber"></label>
                <input type="text" asp-for="Patient.CellPhoneNumber" class="form-control" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Médico Responsável</label>
                <input type="text" value="@doctorName" class="form-control" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group mt-1">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</div>